@{
    Layout = null;
}
@model OOD.Models.ContactUs;
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    @*<html>*@
    <head>
        <title>Contact</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!--favicon-->
    <link rel="shortcut icon" href="images/fav.png" type="image/x-icon">
        <!-- ! css Begin-->
    <link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="../css/screen.css">
        <!-- ! css ends -->
        <!-- ! Custom fonts Begin -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        <!-- ! Custom fonts end -->
        <!-- FontAwsome -->
    <script src="https://kit.fontawesome.com/5336317b7a.js" crossorigin="anonymous"></script>
    </head>
    @*<body>*@
    <header class="headerInner">
        <div class="topHeaderWrapper">
            <div class="container">
                <div class="topHeader d-flex align-items-center justify-content-between">
                    <a href="index.html">
                        <div class="logo">
                            <img src="~/images/logo-white.png" alt="Logo" class="loginLogo">
                        </div>
                    </a>
                    <div class="d-flex justify-content-end align-items-center">
                        <div class="mobile-button mobile-button-open"> <span class="line"></span> <span class="line"></span> <span class="line"></span> </div>
                        <div class="menuBtn d-flex align-items-center">
                            <div class="menuList">
                                <ul>
                                    <li>
                                        <a href="contact.html">Inquiry</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tryBtn ml-sm-3 ml-2">
                                <a href="login.html" class="primary-btn">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>

    @*<section class="contactFormWrapper sectionPadding">*@
    <div class="container">
        <div class="pageTitle pageTitleCenter">
            <h2>Contact Us</h2>
        </div>
        <div class="contactForm mt-5">
            <form class="profileForm mb-4">
                <div class="row">
                    @*<div class="col-sm-6 mb-3">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="First Name">
                        </div>
                        </div>*@
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-sm-6 mb-3" })
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @*<div class="col-sm-6 mb-3">
                        <div class="form-group">
                        <input type="password" class="form-control" placeholder="Last Name">
                        </div>
                        </div>*@
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-sm-6 mb-3" })
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @*<div class="col-sm-6 mb-3">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="phone Number">
                        </div>
                        </div>*@
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-sm-6 mb-3" })
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @*<div class="col-sm-6 mb-3">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email">
                        </div>
                        </div>*@
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "col-sm-6 mb-3" })
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    @*<div class="col-sm-12 mb-3">
                        <div class="form-group">
                        <textarea placeholder="Enter Message Here"></textarea>
                        </div>
                        </div>*@
                    <div class="col-sm-12 mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "col-sm-12 mb-3" })
                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="primary-btn">Submit</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
    @*</section>*@




    <footer class="footerSection">
        <div class="go-top">
            <img src="~/images/top-btn.png">
        </div>

        <div class="subfooter">
            <div class="container">
                <div class="container">
                    <div class="row align-items-end">
                        <div class="col-6">
                            <p>©2022 All Rights Reserved. Covid Track - Team 2 </p>
                        </div>
                        <div class="col-6">
                            <ul class="d-flex ml-auto">
                                <li>
                                    <a href="signup.html">Sign Up</a>
                                </li>
                                <li class="ml-3">
                                    <a href="login.html">Log in</a>
                                </li>
                                <li class="ml-3">
                                    <a href="contact.html">Quick Inquiry</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- ! Script Begin -->
    <!--  <script src="js/jquery-2.2.4.min.js"></script>
     <script src="js/bootstrap.bundle.min.js"></script>
     <script src="js/owl.carousel.min.js"></script> -->
    <script src="../js/function.js"></script>
    <script src="../js/global.js"></script>
    <!-- ! Script ends -->
    @* </body>*@
    @*</html>*@
}