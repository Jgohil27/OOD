@page
@model LoginModel

@*@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/Account/_AuthLayout.cshtml";
}*@

    
   
@*    <!DOCTYPE html>*@
<html>
   <head>
      <title>Login</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!--favicon-->
      <link rel="shortcut icon" href="images/fav.png" type="image/x-icon">
      <!-- ! css Begin-->
      <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
      <link rel="stylesheet" type="text/css" href="~/css/screen.css">
      <!-- ! css ends -->
      <!-- ! Custom fonts Begin -->
      <link rel="preconnect" href="https://fonts.gstatic.com">
      <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
      <!-- ! Custom fonts end -->

      <!-- FontAwsome -->
      <script src="https://kit.fontawesome.com/5336317b7a.js" crossorigin="anonymous"></script>

   </head>
    @*<body>*@
      <div class="login-screen coverbg">
         <div class="container h-100">
            <div class="d-flex align-items-center justify-content-center h-100 flex-column">
               <div class="loginBox">
               <h5>Welcome to</h5>
               <img src="~/images/logo-1.png" alt="Logo" class="loginLogo">
               <p>Input your credentials to login or signup.</p>
               <form  id="account" method="post">
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                  @*<input type="text" name="" placeholder="Email address">*@
                    <label asp-for="Input.Email"></label>
                  <input asp-for="Input.Email" class="form-control"/>
                  @*<label asp-for="Input.Email" class="form-label"></label>*@
                   <span asp-validation-for="Input.Email" class="text-danger"></span>
               </div>
               <div class="form-group">
                  @*<input type="password" name="" placeholder="Password">*@
                    <label asp-for="Input.Password"></label>
                   <input asp-for="Input.Password" class="form-control"/>
                   @* <label asp-for="Input.Password" class="form-label"></label>*@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
               </div>
                 <button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
               </form>
               <a id="forgot-password" asp-page="./ForgotPassword"><i class="fas fa-lock"></i> Forgot your password?</a>
            </div>
            <div class="sign-upLink pt-4">
               <p class="text-white login-footer">Don't have an account yet? <a href='/Identity/Account/Register'' class="text-white ml-1">Sign up Here <i class="far fa-arrow-alt-circle-right mr-3"></i></a></p>
            </div>
            <div class="login-footer">
                <p>©2022 All Rights Reserved. Covid Track - Team 2  <a href="#">Terms and conditions</a>    <a href="#">Privacy policy</a></p>
            </div>
            </div>
            
         </div>
      </div>


      @*</body>*@

      <!-- ! Script Begin -->
      <script src="js/function.js"></script>
      <!-- <script src="js/bootstrap.bundle.min.js"></script> -->
      <!-- ! Script ends -->
  
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
